.Products
  padding 5px
  &-items
    display flex
    justify-content space-between
  &-item
    width 175px
    text-decoration none
    box-shadow 8px 14px 38px rgba(39,44,49,.06), 1px 3px 8px rgba(39,44,49,.03)
    border-radius 30px
    margin 5px
    position relative
    &-info
      padding 10px
      h2
        font-size 10px
        font-weight bold
        display flex
        justify-content center
        span
          color #33b13a
      p
        font-size 14px
        font-weight 300
    img
      width 100%
      height 200px
      border-radius 5px 5px 0 0
      object-fit contain
    button
      width 100%
      padding 10px
      border-radius 0px 0px 5px 5px
      border 0px
      outline 0
      cursor pointer
      font-size 14px
      font-weight 300
      &:hover
        background-color rgba(39,44,49,.06)
    &:hover
      transform scale(1.1)


