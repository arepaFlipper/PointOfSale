  "main": "index.js",
  "scripts": {
    "build": "webpack-cli --config webpack.config.js --colors",
    "start:prod": "node src/server/index.js",
    "start:dev": "nodemon src/server/index.js --exact babel-node",
    "format": "prettier --write '{*.js,src/**/*.{js,jsx}}'",
    "lint": "eslint src/",
    "lint:fix": "eslint --fix src/",
    "server": "json-server locations.json",
    "start:back": "DEBUG=app:* nodemon src/backend/index",
    "inspect": "DEBUG=express*,app* nodemon --inspect src/backend/index",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crizy182/PointOfSale.git"
